<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/toolbar_unbinding"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#000000">

        <Button
            android:id="@+id/back_unbinding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="返回"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="二维码解绑"/>

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="161dp"
        android:background="#f2f2f2">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@mipmap/ic_qrcode_unbind"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:text="解绑"/>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#e5e5e5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"
            android:textSize="16sp"
            android:textColor="#000000"
            android:text="请确认以下信息"/>

        <View
            android:layout_width="351dp"
            android:layout_height="0.5dp"
            android:layout_marginTop="56dp"
            android:layout_gravity="center_horizontal"
            android:background="#e5e5e5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="76dp"
            android:layout_marginLeft="12dp"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text="操作:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="76dp"
            android:layout_marginRight="12dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="解除绑定二维码"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="106dp"
            android:layout_marginLeft="12dp"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text="门店:"/>

        <TextView
            android:id="@+id/showName_unbinding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="106dp"
            android:layout_marginRight="12dp"
            android:textColor="#000000"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="136dp"
            android:layout_marginLeft="12dp"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text="二维码:"/>

        <TextView
            android:id="@+id/qrcodeKey_unbinding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="136dp"
            android:layout_marginRight="12dp"
            android:textColor="#000000"
            android:textSize="15sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="166dp"
            android:layout_marginLeft="12dp"
            android:textColor="#666666"
            android:textSize="15sp"
            android:text="解除功能:"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="166dp"
            android:layout_marginRight="12dp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="商户主页"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="201dp"
            android:background="#e5e5e5"/>

    </FrameLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f2f2f2">

        <Button
            android:id="@+id/button_unbinding"
            android:layout_width="351dp"
            android:layout_height="48dp"
            android:background="#03a9f5"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:textSize="16sp"
            android:textColor="#ffffff"
            android:text="确认解绑"/>

    </LinearLayout>

</LinearLayout>